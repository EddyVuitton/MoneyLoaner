<div class="section-wrapper" style="width: 35%; padding: 1% 1%; margin: 1% 0%; @_proposalSectionWrapperBorderStyle;">
    <EditForm Model="@_applicationForm"
              OnValidSubmit="@(async () => await OnValidSubmit())"
              OnInvalidSubmit="OnInvalidSubmit"
              style="width: 100%; height: 100%;">
        <DataAnnotationsValidator />
        <div class="d-flex flex-column" style="width: 100%; height: 100%;">
            <MudTabs Elevation="0"
                     Style="width: 100%; height: 100%;"
                     Centered="true"
                     Rounded="true"
                     ApplyEffectsToContainer="true"
                     PanelClass="pa-6">
                <MudTabPanel Text="Wstępna weryfikacja" Style="width: 100%; height: 100%;" Disabled=_disabled>
                    <MudTextField @bind-Value="_applicationForm.Name"
                                  For="@(() => _applicationForm.Name)"
                                  Label="Imię"
                                  Disabled=_disabled />

                    <MudTextField @bind-Value="_applicationForm.Surname"
                                  For="@(() => _applicationForm.Surname)"
                                  Label="Nazwisko"
                                  Disabled=_disabled />

                    <MudTextField @bind-Value="_applicationForm.PhoneNumber"
                                  For="@(() => _applicationForm.PhoneNumber)"
                                  Mask="@(new PatternMask("000 000 000"))"
                                  Label="Telefon komórkowy"
                                  Adornment="Adornment.Start"
                                  AdornmentText="+48"
                                  Disabled=_disabled />

                    <MudTextField @bind-Value="_applicationForm.Email"
                                  For="@(() => _applicationForm.Email)"
                                  Label="Email"
                                  Disabled=_disabled />

                    <MudTextField @bind-Value="_applicationForm.PersonalNumber"
                                  For="@(() => _applicationForm.PersonalNumber)"
                                  Mask="@(new PatternMask("00000000000"))"
                                  Label="PESEL"
                                  Disabled=_disabled />
                </MudTabPanel>
                <MudTabPanel Text="Źródło dochodu" Class="d-flex justify-center" Style="width: 100%; height: 100%;" Disabled=_disabled>
                    <MudTextField @bind-Value="_applicationForm.MonthlyIncome"
                                  For="@(() => _applicationForm.MonthlyIncome)"
                                  Adornment="Adornment.End"
                                  AdornmentText="zł"
                                  Label="Dochody miesięczne na rękę"
                                  Style="width: 50%;"
                                  Disabled=_disabled />
                    <MudTextField @bind-Value="_applicationForm.MonthlyExpenses"
                                  For="@(() => _applicationForm.MonthlyExpenses)"
                                  Adornment="Adornment.End"
                                  AdornmentText="zł"
                                  Label="Wydatki miesięczne"
                                  Style="width: 50%;"
                                  Disabled=_disabled />
                </MudTabPanel>
                <MudTabPanel Text="Metoda wypłaty pożyczki" Style="width: 100%; height: 100%;" Disabled=_disabled>
                    <MudTextField @bind-Value="_applicationForm.CCNumber"
                                  For="@(() => _applicationForm.CCNumber)"
                                  Mask="@(new PatternMask("00 0000 0000 0000 0000 0000 0000"))"
                                  Label="Numer konta"
                                  Disabled=_disabled />
                </MudTabPanel>
            </MudTabs>
            <div class="d-flex flex-row justify-space-around">
                <MudButton OnClick="@CorrectLoan"
                           Style="font-size: 1rem; color: white; padding: 2% 4%; border-radius: 10px;"
                           Variant="Variant.Filled" Color="Color.Primary"
                           Disabled=_disabled>
                    Popraw pożyczkę
                </MudButton>
                <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Info" Disabled=_disabled Style="font-size: 1rem; color: white; padding: 2% 4%; border-radius: 10px;">
                    Złóż wniosek
                </MudButton>
            </div>
        </div>
    </EditForm>
</div>