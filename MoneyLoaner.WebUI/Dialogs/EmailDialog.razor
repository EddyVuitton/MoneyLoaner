<MudDialog>
    <DialogContent>
        <MudForm @ref="@_form"
                 Model="@_proposalDto"
                 Validation="@(_proposalValidator!.ValidateValues)">
            <MudTextField @bind-Value="_proposalDto.Email"
                          For="@(() => _proposalDto.Email)"
                          Immediate="true"
                          Label="Wpisz nowy adres email" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Close" Color="Color.Primary">Zamknij</MudButton>
        <MudButton OnClick="Submit" Color="Color.Success">Potwierdź</MudButton>
    </DialogActions>
</MudDialog>