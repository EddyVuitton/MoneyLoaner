<div class="d-flex flex-column gap-y-4 section-wrapper" style="width: 35%; padding: 1% 1%; margin: 1% 0%; @_loanSectionWrapperBorderStyle;">
    <div class="d-flex flex-column gap-y-2">
        <div class="d-flex justify-center">
            <span class="value-title">Ile potrzebujesz gotówki?</span>
        </div>
        <div class="d-flex flex-row justify-center gap-x-8">
            <div class="align-self-center">
                <MudIconButton OnClick=LoanAmountMinus Icon="fa-solid fa-minus" Color="Color.Primary" Style="padding: 8px" Size="Size.Large" Disabled=_disabled />
            </div>
            <div class="value-wrapper">
                @Loan.Principal.ToString() zł
            </div>
            <div class="align-self-center">
                <MudIconButton OnClick=LoanAmountPlus Icon="fa-solid fa-plus" Color="Color.Primary" Style="padding: 8px" Size="Size.Large" Disabled=_disabled />
            </div>
        </div>
        <div class="d-flex justify-center">
            <MudSlider T="decimal"
                       Value="@Loan.Principal"
                       ValueChanged="LoanValueChanged"
                       Min="LoanConfig.AmountMin"
                       Max="LoanConfig.AmountMax"
                       Step="LoanConfig.AmountStep"
                       Color="Color.Primary"
                       Variant="Variant.Text"
                       Disabled=_disabled>
            </MudSlider>
        </div>
    </div>
    <div class="d-flex flex-column gap-y-2">
        <div class="d-flex justify-center">
            <span class="value-title">Na ile miesięcy?</span>
        </div>
        <div class="d-flex flex-row justify-center gap-x-8">
            <div class="align-self-center">
                <MudIconButton OnClick=LoanPeriodMinus Icon="fa-solid fa-minus" Color="Color.Primary" Style="padding: 8px" Size="Size.Large" Disabled=_disabled />
            </div>
            <div class="value-wrapper" style="">
                @Loan.Installments.ToString() m-cy
            </div>
            <div class="align-self-center">
                <MudIconButton OnClick=LoanPeriodPlus Icon="fa-solid fa-plus" Color="Color.Primary" Style="padding: 8px" Size="Size.Large" Disabled=_disabled />
            </div>
        </div>
        <div class="d-flex justify-center">
            <MudSlider T="decimal"
                       Value="@Loan.Installments"
                       ValueChanged="LoanPeriodValueChanged"
                       Min="@LoanConfig.PeriodMin"
                       Max="@LoanConfig.PeriodMax"
                       Step="@LoanConfig.PeriodStep"
                       Color="Color.Primary"
                       Variant="Variant.Text"
                       Disabled=_disabled>
            </MudSlider>
        </div>
    </div>
    <div style="height: 100%;">
        <div class="d-flex flex-column gap-y-4" style="height: 100%;">
            <div class="d-flex flex-row justify-space-around">
                <div class="d-flex flex-column loan-calculated-container">
                    <span class="loan-calculated-title">Rata od</span>
                    <span class="loan-calculated-value">@_firstInstallmentTotal zł</span>
                </div>
                <div class="d-flex flex-column loan-calculated-container">
                    <span class="loan-calculated-title">RRSO</span>
                    <span class="loan-calculated-value">@_xirr %</span>
                </div>
            </div>
            <div class="d-flex justify-center">
                <MudButton OnClick="ConfirmLoan"
                           Variant="Variant.Filled"
                           Color="Color.Primary"
                           Style="font-size: 1rem; color: white; padding: 2% 4%; border-radius: 10px;"
                           Disabled=_disabled>
                    Potwierdź pożyczkę
                </MudButton>
            </div>
        </div>
    </div>
</div>