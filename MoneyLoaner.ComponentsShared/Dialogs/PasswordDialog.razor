<MudDialog>
    <DialogContent>
        <EditForm Model="@_model" OnValidSubmit="OnValidSubmit">
            <DataAnnotationsValidator />
            <MudCard Elevation="0">
                <MudCardContent>
                    <MudTextField @bind-Value="_model.OldPassword"
                                  For="@(() => _model.OldPassword)"
                                  HelperText="Wpisz swoje stare hasło"
                                  Class="mt-3"
                                  InputType="InputType.Password" />
                    <MudTextField @bind-Value="_model.Password"
                                  For="@(() => _model.Password)"
                                  HelperText="Wybierz silne hasło"
                                  Class="mt-3"
                                  InputType="InputType.Password" />
                    <MudTextField @bind-Value="_model.Password2"
                                  For="@(() => _model.Password2)"
                                  HelperText="Powtórz hasło"
                                  Class="mt-3"
                                  InputType="InputType.Password" />
                </MudCardContent>
                <MudCardActions>
                    <MudSpacer />
                    <MudButton OnClick="Close" Color="Color.Primary">Zamknij</MudButton>
                    <MudButton ButtonType="ButtonType.Submit" Color="Color.Success">Potwierdź</MudButton>
                </MudCardActions>
            </MudCard>
        </EditForm>
    </DialogContent>
</MudDialog>