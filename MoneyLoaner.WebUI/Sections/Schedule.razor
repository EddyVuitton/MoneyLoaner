@if (InstallmentDtos is not null)
{
    <table class="schedule">
        <tr>
            <th>Rata</th>
            <th>Dzień wymagalności</th>
            <th>Kapitał</th>
            <th>Prowizja administracyjna</th>
            <th>Odsetki umowne</th>
            <th>Pozostała kwota do spłaty</th>
        </tr>
        @foreach (var x in InstallmentDtos.OrderBy(x => x.PaymentDate))
        {
            <tr>
                <td>@(x.Number).</td>
                <td>@x.PaymentDate.ToString("dd.MM.yyyy")</td>
                <td>@(x.Principal.ToString("N2")) zł</td>
                <td>@(x.AdmissionFee.ToString("N2")) zł</td>
                <td>@(x.ContractualInterest.ToString("N2")) zł</td>
                <td>@(x.Balance.ToString("N2")) zł</td>
            </tr>
        }
    </table>
}
else
{
    <MudText Typo="Typo.h6" Style="margin: 2%;">Brak harmonogramu do spłaty...</MudText>
}